<?xml version="1.0"?>
<odoo>

    <!-- Customizing Property Tree View -->
    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Properties View" decoration-success="state=='offer accepted' or state=='offer received'"
	            decoration-bf="state=='offer accepted'" decoration-muted="state=='sold'">

                <field name="name"/>
                <field name="property_type_id"/>
                <field name="postcode"/>
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability" optional="True" invisible="True"/>
                <field name="user_id" optional="True" invisible="True"/>
                <field name="partner_id" optional="True" invisible="True"/>
                <field name="state" optional="True" invisible="True"/>
            </tree>
        </field>
    </record>


    <!-- Customizing the Property Form View -->
    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Properties Form">

	            <header>
                    <button name="action_property_sold" type="object" string="Sold"
		                states="new,offer received,offer accepted" class="btn btn-outline-primary"/>
	  
                    <button name="action_property_canceled" type="object" string="Canceled"
		                states="new,offer received,offer accepted" class="btn btn-outline-primary"/>
                </header>

	            <sheet>
                    <div class="oe_title">
                        <h1 class="mb32">
                            <field name="name" class="mb16"/>
                        </h1>
	                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                    </div>
                    <div>
                        <group>
                            <group>
                                <field name="property_type_id" options="{'no_create_edit': True}"/>
                                <field name="postcode"/>
                                <field name="date_availability"/>
                            </group>
                            <group>
                                <field name="expected_price"/>
		                        <field name="best_price"/>
                                <field name="selling_price"/>
                            </group>
                        </group>
                    </div>
                    <div>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="description"/>
                                    <field name="bedrooms"/>
                                    <field name="living_area"/>
                                    <field name="facades"/>
                                    <field name="garage"/>
                                    <field name="garden"/>
                                    <field name="garden_area" attrs="{'invisible':[('garden', '=', False), ]}"/>
                                    <field name="garden_orientation" attrs="{'invisible':[('garden', '=', False), ]}"/>
                                    <field name="total_area"/>
                                    <field name="last_seen"/>
                                    <field name="active"/>
                                    <field name="state"/>
                                </group>
                            </page>

                            <page string="Offers">
		                        <group>
		                            <field name="offer_ids" attrs="{'readonly':[('state', '=', 'offer accepted'), ]}" >
		                                <tree string="Offers" editable="bottom" decoration-success="status=='accepted'" decoration-danger="status=='refused'">
		                                    <field name="price"/>
		                                    <field name="partner_id"/>
		                                    <field name="validity"/>
		                                    <field name="date_deadline"/>
		                                    <button name="action_offer_accept" string="accept" type="object" icon="fa-check"/>
		                                    <button name="action_offer_refuse" string="refuse" type="object" icon="fa-times"/>
		                                    <field name="status" optional="True" invisible="True"/>
		                                </tree>
		                            </field>
		                        </group>
	                        </page>
	                        <page string="Other Info">
                                <group>
                                    <field name="user_id" string="Salesman"/>
                                    <field name="partner_id" string="Buyer"/>
                                </group>
                            </page>
                        </notebook>
                    </div>
                </sheet>
            </form>
        </field>
    </record>


    <!-- Customizing Search for Property -->
    <record id="view_estate_property_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Properties Search Results">
                <field name="name" string="Title" />
                <field name="property_type_id"/>
                <field name="postcode" />
                <field name="expected_price" />
                <field name="bedrooms" />
                <field name="living_area" />
                <field name="facades" />
                <field name="user_id"/>
                <field name="partner_id"/>
	            <field name="description" string="Minimum Area" filter_domain="[('living_area', '>=', self)]"/>
	            <separator/>
                <filter string="Available" name="state" domain="['|', ('state', '=', 'new'), ('state', '=', 'offer received')]"/>
                <group expand="1" string="Group By">
                    <filter string="Postcode" name="postcode" context="{'group_by':'postcode', 'residual_visible':True}"/>
                </group>
            </search>
        </field>
    </record>


    <!-- Property window Action Initiation -->
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="estate.view_estate_property_search"/>
        <field name="context">{'search_default_state': True,}</field>
    </record>

</odoo>

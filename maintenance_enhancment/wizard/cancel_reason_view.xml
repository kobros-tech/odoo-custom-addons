<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- view_cancel_registration_form -->
        <record id="view_cancel_reason_form" model="ir.ui.view">
            <field name="name">cancel.reason.form</field>
            <field name="model">cancel.reason</field>
            <field name="arch" type="xml">
                <form string="Cancel Reason">
                    <group>
                        <field name="reason"/>
                    </group>
                    <footer>
                        <button name="done" string="DONE" type="object" class="btn-primary"/>
                        <button name="discard" string="DISCARD" type="object" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
